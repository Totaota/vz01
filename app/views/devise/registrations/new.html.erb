<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <h2>Inscription</h2>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-xs-12 text-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/devise_errors'%>
        
      <div class="form-group">
        <%= f.label :position_held %><br />
        <%= f.text_field :position_held, autofocus: true, class: "form-control", placeholder: "Ex:1 Gérant, Community manager, Responsable marketing... " %>
      </div>
      <div class="form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "Ex: Jean" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: "Ex: Dupont" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Ex: demo@demo.fr" %>
      </div>
      <div class="form-group">
        <% if @minimum_password_length %>
        <%= f.label :password %><br />
        <em>(Votre mot de passe doit comprendre 8 caractères ou plus)</em>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Créer votre mot de passe" %>
        <% end %>
      </div>
      <%= f.label :password_confirmation %><br />
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmer votre mot de passe" %>
      </div>
    </div>
    <div class="col-md-6 col-xs-12 text-center">
      <div class="form-group">
        <%= f.label :social_reason %><br />
        <%= f.text_field :social_reason, autofocus: true, class: "form-control", placeholder: "Ex: Joe coiffure " %>
      </div>
      <div class="form-group">
        <%= f.label :street %><br />
        <%= f.text_field :street, autofocus: true, class: "form-control", placeholder: "Ex: 10 rue des peupliers" %>
      </div>
      <div class="form-group">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal_code, autofocus: true, class: "form-control", placeholder: "Ex: 71000" %>
      </div>
      <div class="form-group">
        <%= f.label :city %><br />
        <%= f.text_field :city, autofocus: true, class: "form-control", placeholder: "Ex: Mâcon" %>
      </div>
      <div class="form-group">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, autofocus: true, class: "form-control", placeholder: "Ex: 0472727272" %>
      </div>
        <div class="col-md-12">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                Upload mon logo d'entreprise
        <%= f.file_field :avatar %>
              </span>
            </div>
        </div>
      
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
      <div class="actions">
        <%= f.submit "Inscription", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div> 
  </div>
</div>  
  
