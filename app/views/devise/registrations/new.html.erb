<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">

      <h2>Inscription</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="form-group">
          <%= f.first_name_field :first_name, autofocus: true, class: "form-control", placeholder: "Prénom" %>
        </div>
        
        <div class="form-group">
          <%= f.last_name_field :last_name, autofocus: true, class: "form-control", placeholder: "Nom" %>
       </div>
      
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse E-mail" %>
        </div>
      
        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Créer votre mot de passe" %>
        </div>
      
        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmer votre mot de passe" %>
        </div>
      
        <div class="actions">
          <%= f.submit "Inscription", class: "btn btn-primary" %>
        </div>
      <% end %>

  </div>
</div>
